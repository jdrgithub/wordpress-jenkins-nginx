version: '3.8'

services:
  db:
    image: mysql:5.7
    restart: always
    container_name: mysql-prod
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: wordpress
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
    volumes:
      - db_data_prod:/var/lib/mysql
    networks:
      - wordpress-net

  jenkins:
    image: jdrdock/jenkins-docker-enabled:latest
    user: root
    restart: always
    container_name: jenkins-prod
    volumes:
      - /opt/webapps/jenkins/jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - "8080:8080"
    networks:
      - wordpress-net

  nginx:
    build:
      context: /opt/webapps/nginx
      dockerfile: nginx-custom.Dockerfile
    image: nginx:alpine
    restart: always
    container_name: nginx-prod
    command: /bin/sh -c "/etc/nginx/nginx-start.sh"
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /opt/webapps/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - /etc/ssl/cloudflare:/etc/ssl/cloudflare:ro
    networks:
      - wordpress-net

networks:
  wordpress-net:

volumes:
  db_data_prod:

